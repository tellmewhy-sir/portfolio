---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Navigation from '../components/react/Navigation';
import { fade, slide } from 'astro:transitions';
import '@fontsource/dm-mono/300.css';
import '@fontsource/dm-mono/300-italic.css';
import '@fontsource/dm-mono/400.css';
import '@fontsource/dm-mono/400-italic.css';
import '@fontsource/dm-mono/500.css';
import '@fontsource/dm-mono/500-italic.css';
import '@fontsource-variable/dm-sans';

interface Props {
  title: string;
}

const { title } = Astro.props;

let menuLinks = [
  {
    title: 'dev',
    href: '/',
    isHome: true,
    menuOrder: 1,
  },
  {
    title: 'me',
    href: '/about',
    menuOrder: 2,
  },
  {
    title: 'exp',
    href: '/experience',
    menuOrder: 3,
  },
  {
    title: 'works',
    href: '/works',
    menuOrder: 4,
  },
  {
    title: 'contact',
    href: '/contact',
    menuOrder: 5,
  },
];
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="relative">
    <div
      class="h-full w-full flex flex-col md:flex-row items-center justify-center md:min-w-[800px]"
    >
      <!-- <Header /> -->
      <Navigation links={menuLinks} client:load transition:persist />
      <div transition:animate="slide">
        <slot />
      </div>
    </div>
    <style is:global>
      @font-face {
        font-family: 'RaglotDemo';
        src: url('/fonts/Raglot-Demo.otf') format('opentype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      html,
      body {
        font-family: 'DM Sans Variable', sans-serif;
        background: #fff;
        height: 100vh;
        width: 100vw;
      }
      .container {
        margin: auto;
        padding: 1rem;
        /* width: 800px; */
        max-width: calc(100% - 2rem);
        color: black;
        font-size: 20px;
        line-height: 1.6;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      .heading {
        font-family: 'DM Mono', monospace;
      }
    </style>
  </body>
</html>
