---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const groupedProjects = projects.reduce((acc, item) => {
  let { category } = item.data;

  if (!acc[category]) {
    acc[category] = [item];
  } else {
    acc[category].push(item);
  }

  return acc;
}, {});
---

<Layout title="Work">
  <main class="container">
    <h1 class="heading text-3xl font-medium mb-12">works.</h1>
    <div>
      {
        Object.keys(groupedProjects).map((category) => {
          return (
            <section class="mb-12">
              <h2 class="heading text-2xl mb-4 underline">{category}.</h2>
              <ul class="flex flex-col gap-2">
                {groupedProjects[category].map(({ data, slug }) => (
                  <li class="font-light">
                    <a href={`works/${slug}`}>{data.title}</a>
                  </li>
                ))}
              </ul>
            </section>
          );
        })
      }
    </div>
  </main>
</Layout>

<style scoped>
  li {
    transition: all 0.3s;
    position: relative;

    &::before {
      content: 'â†’';
      opacity: 0;
      transform: translateX(-1rem);
      transition: all 0.3s;
      position: absolute;
      left: -1.5rem;
    }
    &:hover {
      &::before {
        opacity: 1;
