---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="David Elutilo">
  <main class="h-full w-full">
    <div class="h-full w-full flex items-center justify-center">
      <h1>delutilo.</h1>
      <nav>
        <ul class="menu">
          <li class="menu-item">dev</li>
          <li class="menu-item active">design</li>
          <li class="menu-item">me</li>
        </ul>
      </nav>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: black;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-family: 'RaglotDemo', sans-serif;
    font-size: 4rem;
    line-height: 1;
    text-align: center;
  }

  @starting-style {
    .menu-item {
      display: none;
      opacity: 0;
    }
  }

  .menu-item {
    display: none;
    font-family: 'RaglotDemo', sans-serif;
    font-size: 4rem;
    line-height: 1;
    margin: 0 1rem;
    cursor: pointer;
    transition:
      opacity 0.25s,
      display 0.25s;
    transition-behavior: allow-discrete;
    opacity: 0;
    @apply px-8;

    &.active {
      display: block;
      opacity: 1;
      @apply bg-gray-400 rounded-full;
    }
  }

  .menu {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    &:hover {
      .menu-item:not(.active) {
        display: block;
        opacity: 0.5;
      }
    }
  }
</style>
